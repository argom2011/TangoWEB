@{
    Layout = "_Layout";
    ViewData["Title"] = "Tango Demo";
}

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container my-5">
    <!-- Título de la página -->
    <h1 class="text-center mb-5">@ViewData["Title"]</h1>

    <!-- Menú de módulos -->
    <div class="row g-4 justify-content-center">

        <!-- Clientes -->
        <div class="col-md-3">
            <div class="card menu-card text-center">
                <div class="card-body">
                    <i class="bi bi-people-fill menu-icon"></i>
                    <h5 class="card-title mt-3">Clientes</h5>
                    <a asp-controller="Clientes" asp-action="Index" class="btn btn-primary mt-3">Ir</a>
                </div>
            </div>
        </div>

        <!-- Ventas / Pedidos -->
        <div class="col-md-3">
            <div class="card menu-card text-center">
                <div class="card-body">
                    <i class="bi bi-cart-fill menu-icon"></i>
                    <h5 class="card-title mt-3">Ventas / Pedidos</h5>
                    <a asp-controller="Home" asp-action="Ventas" class="btn btn-primary mt-3">Ir</a>
                </div>
            </div>
        </div>

        <!-- Stock / Productos -->
        <div class="col-md-3">
            <div class="card menu-card text-center">
                <div class="card-body">
                    <i class="bi bi-box-seam menu-icon"></i>
                    <h5 class="card-title mt-3">Stock / Productos</h5>
                    <a asp-controller="Productos" asp-action="Index" class="btn btn-primary mt-3">Ir</a>
                </div>
            </div>
        </div>

        <!-- Reportes / Dashboard -->
        <div class="col-md-3">
            <div class="card menu-card text-center">
                <div class="card-body">
                    <i class="bi bi-bar-chart-fill menu-icon"></i>
                    <h5 class="card-title mt-3">Reportes / Dashboard</h5>
                    <a href="/Reportes/VentasDashboard" class="btn btn-info mt-3">Ir</a>
                </div>
            </div>
        </div>

    </div>
</div>
