@model IEnumerable<TangoWEB.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<link rel="stylesheet" href="~/css/clientes.css" />

<div class="container mt-4">

    <h2 class="text-center mb-4">Gestión de Clientes</h2>

    <!-- BOTONES SUPERIORES -->
    <div class="mb-3 d-flex gap-2 align-items-center">
        <a asp-controller="Clientes"
           asp-action="Create"
           class="btn btn-success btn-sm">
            ➕ Nuevo
        </a>

        <a asp-controller="Home"
           asp-action="Index"
           class="btn btn-secondary btn-sm">
            ⬅ Menú
        </a>
    </div>

    <!-- GRILLA -->
    <table class="table table-striped table-hover text-center shadow">
        <thead class="table-primary">
            <tr>
                <th>Nombre</th>
                <th>CUIT</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Fecha Alta</th>
                <th style="width:160px">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Nombre</td>
                        <td>@c.CUIT</td>
                        <td>@c.Email</td>
                        <td>@c.Telefono</td>
                        <td>@c.Direccion</td>
                        <td>@c.FechaAlta.ToString("dd/MM/yyyy")</td>
                        <td>
                            <div class="d-flex justify-content-center gap-1">
                                <a asp-controller="Clientes"
                                   asp-action="Edit"
                                   asp-route-id="@c.ClienteID"
                                   class="btn btn-sm btn-outline-primary">
                                    ✏
                                </a>

                                <a asp-controller="Clientes"
                                   asp-action="Delete"
                                   asp-route-id="@c.ClienteID"
                                   class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('¿Eliminar cliente?');">
                                    🗑
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-muted text-center">
                        No hay clientes cargados
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
