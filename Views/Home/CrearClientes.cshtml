@model TangoWEB.Models.Cliente

@{
    bool esEdicion = Model != null && Model.ClienteID > 0;
    ViewData["Title"] = esEdicion ? "Editar Cliente" : "Nuevo Cliente";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form method="post" asp-action="@(esEdicion ? "Edit" : "Create")" class="card p-4 shadow" style="max-width:600px; margin:auto;">

        @if (esEdicion)
        {
            <input type="hidden" asp-for="ClienteID" />
        }

        <div class="mb-3">
            <label class="form-label fw-bold">Nombre</label>
            <input asp-for="Nombre" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">CUIT</label>
            <input asp-for="CUIT" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Dirección</label>
            <input asp-for="Direccion" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Teléfono</label>
            <input asp-for="Telefono" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Email</label>
            <input asp-for="Email" type="email" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold" for="Activo">Activo</label>
            <select asp-for="Activo" class="form-select">
                <option value="1">1 - Sí</option>
                <option value="0">2 - No</option>
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn @(esEdicion ? "btn-primary" : "btn-success")">
                @(esEdicion ? "💾 Guardar Cambios" : "💾 Guardar")
            </button>
            <a asp-action="Index" class="btn btn-secondary">⬅ Volver</a>
        </div>
    </form>
</div>
